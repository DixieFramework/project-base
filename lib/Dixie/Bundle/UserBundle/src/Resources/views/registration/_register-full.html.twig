{% extends '@TalavWeb/layouts/default-stretch.html.twig' %}

{% block meta_title 'Inscription' %}

{% block titre -%}
    Rejoindre la communauté
{%- endblock %}

{% block breadcrumb -%}
    {% do menu.addItem("Inscription", url('talav_user_register')) %}
{%- endblock %}

{% block meta_description 'Devenez membre de By Night, créez vos événements et partagez les avec vos amis sur les réseaux sociaux !' %}

{% block body %}
    {{ form_start(form, {'action': path('talav_user_register'), 'attr': {'id': 'edit-form'}}) }}
    <div class="card">
        <div class="card-body">
            {% include '@TalavUser/registration/register-content.html.twig' with({'partial': false}) %}
        </div>
        <div class="card-footer text-center py-2">
            <button class="btn btn-lg btn-primary" type="submit">
                Créer mon profil
            </button>
        </div>
    </div>
    <p>
        Vous avez déjà un compte ?
        <a class="connexion" href="{{ path('talav_user_login') }}" title="Connectez-vous sur By Night">
            Connectez-vous !
        </a>
    </p>
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}

{# javascripts #}
{% block javascripts -%}
    {% if app.debug %}
        {{ parent() }}
        {{- asset_js('js/vendor/jquery-validation/jquery.validate.js') }}
        {{- asset_js('js/vendor/jquery-validation/additional-methods.js') }}
        {{- asset_js('js/vendor/jquery-validation/localization/messages_fr.js') }}
        {{- asset_js('js/extensions/validator-extensions.js') }}
        {{- asset_js('js/extensions/validator-extensions-en.js') -}}
        {{ asset_js('js/vendor/zxcvbn/zxcvbn.js') }}
        {{ asset_js('js/plugins/plugin-password-strength.js') }}
        {{ asset_js('js/extensions/password-extensions.js') }}
        {{ asset_js('js/application/user_register.js') }}
    {% else %}
        {{- asset_js('js/core_edit.js') }}
        {{ asset_js('js/user_register.js') }}
    {% endif %}
{%- endblock %}
