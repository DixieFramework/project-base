{% extends '@TalavUser/frontend/profile/layout.html.twig' %}

{#{% block container_class 'mt-n4' %}#}
{% block container_class 'container mt-n4' %}

{% block page_content %}
    <div class="row g-4 pb-4">
        <div class="col-12">
            <div class="d-sm-flex justify-content-between align-items-center">
                <h1 class="mb-sm-0 h2">Profile</h1>
                <div class="d-block d-flex gap-2 flex-wrap">
                    {% if is_granted('GALLERY_CREATE') %}
                        <a href="{{ url('talav_gallery_create') }}" class="btn btn-sm btn-primary mb-0"><i class="fas fa-plus fa-fw"></i>{{ 'Message'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


    <h2 class="h4">Paragraph Title</h2>
    {% if user.username is same as app.user.username %}
        Your own profile
    {% else %}
        {{ user.username }}'s profile
    {% endif %}
{% endblock %}
