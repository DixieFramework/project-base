{% extends '@TalavWeb/cards/card_base.html.twig' %}
{% from '@TalavWeb/macros/_icons.html.twig' import link, footer_center %}
{# parameters #}
{%- set title = 'resetting.request.title' -%}
{%- set title_domain = 'TalavUserBundle' -%}
{%- set title_icon = 'eraser me-2' -%}
{%- set status_bar = false -%}
{# hide navigation and footer #}
{% block navigation_horizontal %}{% endblock %}
{% block navigation_vertical -%}{% endblock %}
{# class styles #}
{% block card_container_class ' col-xl-8 offset-xl-2 my-auto h-75' %}
{# body #}
{% block card_body -%}
<p>
    We have sent you an email. It contains a link that you will need to click to reset your password.
</p>
<p>
    If you haven't received the email, please check your junk mail folder or you can <a href="{{ path('app_forgot_password_request') }}">try again</a>.
</p>
<p class="mb-1">
    <b>Notice :</b>
</p>
<ul class="mb-0">
    <li>The request to change the new password expires in {{ expires_life_time }} (at {{ expires_date|locale_time('short') }}).</li>
    <li>You can request a new password again in {{ throttle_life_time }} (at {{ throttle_date|locale_time('short') }}).</li>
</ul>
{%- endblock %}
{# footer #}
{% block card_footer -%}
{{ link(path('app_login'), 'security.login.submit', 'btn btn-form btn-primary', null, 'security.login.description', 'TalavUserBundle') }}
{{ footer_center() }}
{%- endblock %}
{# stylesheets #}
{% block stylesheets -%}
{{ asset_css('css/center.css') }}
{% endblock %}
