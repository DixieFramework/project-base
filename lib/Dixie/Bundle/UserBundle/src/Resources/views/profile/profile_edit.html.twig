{% extends '@TalavWeb/cards/card_edit.html.twig' %}
{# parameters #}
{%- set title = 'profile.edit.title' -%}
{%- set title_icon = 'user-gear fa-fw me-2' -%}
{%- set cancel_path = path('homepage') -%}
{%- set form_attr = form_attr|default({})|merge({
                        'data-check-name': url('ajax_check_user_name'),
                        'data-check-email': url('ajax_check_user_email')}) -%}
{% block card_sidebar %}
{% include '@TalavUser/profile/_side_menu.html.twig' with {'user': app.user} %}
{% endblock %}
{% block stylesheets %}
{{ asset_css('css/fileinput.css') }}
{% endblock %}
{% block javascripts -%}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/plugins/plugin-input-file.js') }}
{{ asset_js('js/extensions/file-input-extensions.js') }}
{{ asset_js('js/extensions/password-extensions.js') }}
{{ asset_js('js/application/user_profile.js') }}
{% else %}
{{ asset_js('js/user_profile.js') }}
{% endif %}
{%- endblock %}
