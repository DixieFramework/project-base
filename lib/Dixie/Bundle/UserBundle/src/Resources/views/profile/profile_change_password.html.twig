{% extends '@TalavWeb/cards/card_edit.html.twig' %}
{# parameters #}
{%- set title = 'profile.change_password.title' -%}
{%- set title_icon = 'unlock-alt fa-fw me-2' -%}
{%- set title_domain = 'TalavUserBundle' -%}
{%- set cancel_path = path('homepage') -%}
{%- set form_attr = form_attr|default({})|merge({'data-equal_to': 'password.mismatch'|trans([], 'validators')}) -%}
{%- block card_container_class ' col-lg-8 col-xl-8 offset-xl-1' -%}
{%- block card_sidebar_class ' col-lg-4 col-xl-3' -%}
{% block card_sidebar %}
    {% include '@TalavUser/profile/_side_menu.html.twig' with {'user': app.user} %}
{% endblock %}
{# javascripts #}
{% block javascripts -%}
{% if app.debug %}
{{ parent() }}
{{ asset_js('js/vendor/zxcvbn/zxcvbn.js') }}
{{ asset_js('js/plugins/plugin-password-strength.js') }}
{{ asset_js('js/extensions/password-extensions.js') }}
{{ asset_js('js/application/user_change_password.js') }}
{% else %}
{{ asset_js('js/user_change_password.js') }}
{% endif %}
{%- endblock %}
