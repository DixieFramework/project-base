{% extends '@TalavWeb/cards/card_edit.html.twig' %}

<div class="row">
    <div class="col-12">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>

    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'talav.layout.logged_in_as'|trans({'%username%': app.user.username}, 'TalavUserBundle') }} |
            <a href="{{ path('talav_user_logout') }}">
                {{ 'talav.layout.logout'|trans({}, 'TalavUserBundle') }}
            </a>
        {% else %}
            <a href="{{ path('talav_user_login') }}">{{ 'talav.layout.login'|trans({}, 'TalavUserBundle') }}</a>
            <a href="{{ path('hwi_oauth_service_redirect',{service: 'facebook'}) }}">
                Login with Facebook
            </a>
        {% endif %}
    </div>

    <aside class="col-lg-4 col-md-5 offset-xl-1 order-md-2 mb-5">
        <div class="card">
            <div class="card-header">
                Menu
            </div>
            <ul class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span><i class="fas fa-pager fa-fw me-2"></i></span>
                    Feed
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span><i class="fas fa-comment fa-fw me-2"></i></span>
                    Messages<span class="badge rounded-pill bg-primary text-light ms-auto">1</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span><i class="fas fa-bell fa-fw me-2"></i></span>
                    Notifications<span class="badge rounded-pill bg-primary text-light ms-auto">3</span>
                </a>
            </ul>
        </div>
    </aside>

    <div class="col-xl-7 col-lg-8 col-md-7 order-md-1 mb-5">

        <div>
            {% block talav_user_content %}
            {% endblock talav_user_content %}
        </div>

    </div>
</div>
