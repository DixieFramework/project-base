<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Talav\PermissionBundle\Entity\RolePermission" table="tlv_role_permission">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <many-to-one field="permission" target-entity="Talav\PermissionBundle\Entity\PermissionInterface" fetch="LAZY">
            <join-column name="permission_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="role" target-entity="Talav\PermissionBundle\Entity\RoleInterface" fetch="LAZY" inversed-by="rolePermissions">
            <join-column name="role_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
