<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Talav\ProfileBundle\Entity\Profile" table="user_profile">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="firstName" column="first_name" nullable="true" />
        <field name="lastName" column="last_name" nullable="true" />
        <field name="gender" type="string" column="gender" enum-type="Talav\ProfileBundle\Enum\Gender" />
        <field name="birthdate" type="datetime" column="birthdate" nullable="true" />
        <field name="bio" column="bio" type="text" nullable="true" />

        <one-to-one field="user" target-entity="Talav\Component\User\Model\UserInterface" mapped-by="profile"/>

        <one-to-many field="requester" target-entity="Talav\ProfileBundle\Entity\FriendshipRequest" mapped-by="requester">
        </one-to-many>

        <one-to-many field="requestee" target-entity="Talav\ProfileBundle\Entity\FriendshipRequest" mapped-by="requestee">
        </one-to-many>

        <one-to-many field="friendships" target-entity="Talav\ProfileBundle\Entity\Friendship" mapped-by="profile">
        </one-to-many>

    </mapped-superclass>
</doctrine-mapping>
