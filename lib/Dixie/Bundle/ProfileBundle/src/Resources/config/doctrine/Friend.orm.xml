<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Talav\ProfileBundle\Entity\Friend" repository-class="Talav\ProfileBundle\Repository\FriendRepository" table="user_friend">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <many-to-one field="user" target-entity="Talav\Component\User\Model\UserInterface" inversed-by="friendRequests">
      <join-column nullable="false" />
    </many-to-one>

    <many-to-one field="friend" target-entity="Talav\Component\User\Model\UserInterface" inversed-by="acceptedFriendRequests">
      <join-column nullable="false" />
    </many-to-one>

    <field name="status" length="255">
      <options>
        <option name="comment">Status from FriendStatus</option>
      </options>
    </field>

    <field name="createdAt" column="created_at" type="datetime_immutable" column-definition="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>
    <field name="updatedAt" column="updated_at" type="datetime_immutable" column-definition="TIMESTAMP DEFAULT CURRENT_TIMESTAMP"/>

  </entity>
</doctrine-mapping>
