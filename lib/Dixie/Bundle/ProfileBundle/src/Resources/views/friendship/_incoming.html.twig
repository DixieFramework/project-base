<div class="row row-cols-xl-3 align-items-lg-center border-bottom g-4 px-2 py-4">
    <!-- Data item -->
    <div class="col">
        <small class="d-block d-lg-none">Sender:</small>
        <div class="d-flex align-items-center">
            <!-- Avatar -->
            <div class="avatar avatar-xs flex-shrink-0">
                <img class="avatar-img rounded-circle" src="{{ asset('images/avatar.png') }}" height="28" width="28" alt="avatar">
            </div>
            <!-- Info -->
            <div class="ms-2">
                <h6 class="mb-0 fw-light"><a href="{{ path('user_profile_view', {'id':request.requester.user.profile.id, 'username': request.requester.user.username|slug}) }}">{{ request.requester.user.username }}</a></h6>
            </div>
        </div>
    </div>

    <!-- Data item -->
    <div class="col">
        <small class="d-block d-lg-none">Requested date:</small>
        <h6 class="mb-0 fw-normal">{{ request.updatedAt|format_date('medium') }}</h6>
    </div>

    <!-- Data item -->
    <div class="col">
        <a href="{{ path('profile_friendship_request_delete', {'username': request.requester.user.username}) }}" class="btn btn-danger btn-sm mb-0 me-2">{{ 'common.button_dismiss'|trans({}, 'TalavWebBundle') }}</a>
        <a href="{{ path('profile_friendship_create', {'username': request.requester.user.username}) }}" class="btn btn-success btn-sm mb-0">{{ 'common.button_accept'|trans({}, 'TalavWebBundle') }}</a>
    </div>
</div>
