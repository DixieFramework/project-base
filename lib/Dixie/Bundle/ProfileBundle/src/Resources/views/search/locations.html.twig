{% block js %}
    <script>
		$(function () {
			$(".show_options").click(function(){
				$("#search_options").toggleClass("d-block").toggleClass("d-none");
				$(".search").toggleClass("d-block").toggleClass("d-none");
			});

			if ($(".show_map").is(":checked")) {
				map.showMap();
			}
			$(".show_map").click(function(){
				if ($(this).is(":checked")) {
					map.showMap();
				} else {
					map.hideMap();
				}
			});
		});
    </script>
{% endblock %}
