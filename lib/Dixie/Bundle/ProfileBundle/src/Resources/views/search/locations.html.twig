                                <div class="col-12">
                                    {{ form_row(form.distance) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.min_age) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.max_age) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.gender) }}
                                </div>
                                <div class="col-12 mb-2">
                                    <span class="font-weight-bolder">{{ 'offers'|trans }}</span>
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.offerdinner) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.offertour) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.order) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.direction) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.items) }}
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="u-flex u-justify-end">
                        {% if form.resetOptions is defined %}
                            {{ form_widget(form.resetOptions) }}
                        {% endif %}
                        {{ form_widget(form.updateMap) }}
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}


            {% if profiles is defined %}

                {% for profile in profiles %}

                    {{ profile.username }}

                {% endfor %}

            {% endif %}

        </div>
        <!-- Card body END -->

        <!-- Card Footer START -->
        <div class="card-footer p-3">

        </div>
        <!-- Card Footer END -->
    </div>

