{
    "name": "{{ vendor|lower }}/{{ bundle_short_name|lower }}-bundle",
    "description": "{{ bundle_name }} description",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Name",
            "homepage": "http://example.com/",
            "email": "example@example.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "{{ namespace_double }}\\": "src/"
        }
    },
    "require": {
        "php": ">={{ php_min }}"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "symfony/thanks": false
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ]
}
