{%- block modal -%}
    <form action="{% block form_action'#' %}" method="POST">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">{% block titre '' %}</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% block body %}{% endblock %}
                </div>
                <div class="modal-footer d-print-none justify-content-between align-items-center">
                    {% block footer %}{% endblock %}
                </div>
            </div>
        </div>
    </form>
{%- endblock -%}
