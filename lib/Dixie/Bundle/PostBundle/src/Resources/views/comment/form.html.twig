{#{% import 'form/macros.html.twig' as macros %}#}
<div class="block_poster_commentaire mb-3">
    {% if is_granted('ROLE_USER') %}
        {{ form_start(form) }}

        <div class="col-user-profile">
{#            {{ macros.userLazyThumb(app.user, 75, 75) }}#}
            <!-- Avatar -->
            <div class="avatar avatar-sm">
                {#                                        <span style="background-image: url('{% if post.author.profile.avatar != 'avatar.jpg' %}{{ vich_uploader_asset(post.author.profile) | imagine_filter('thumbnail') }}{% else %}{{ asset('assets/images/avatar.jpg') | imagine_filter('thumbnail') }}{% endif %}')"></span>#}
                <img class="avatar-img rounded-circle border border-1 border-secondary" src="{% if  app.user.avatar %}{{ media_thumb_reference( app.user.avatar, 'square_small') }}{% else %}{{ asset('images/avatar.png') }}{% endif %}" alt="avatar">
            </div>
            <strong class="ms-2">{{ app.user.username }}</strong>
        </div>
        <div>
            {% block form_comment %}
                {{ form_row(form.message) }}
            {% endblock %}
            <button type="submit" class="btn btn-primary btn-submit btn-raised">Poster</button>
        </div>
        {{ form_rest(form) }}
        <hr />
    {% else %}
        <div class="text-center mt-4">
            <a class="btn btn-outline-secondary connexion" title="Se connecter pour laisser un commentaire"
               href="{{ path('app_login') }}">
                Laisser un commentaire
            </a>
        </div>
    {% endif %}
</div>
